# Firebase Configuration
# Copy this file to .env and fill in your actual Firebase project values

# Get these values from your Firebase project settings
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Environment
NODE_ENV=development

# Optional: Custom domain for production
# REACT_APP_CUSTOM_DOMAIN=yourdomain.com

# Optional: Analytics and monitoring
# REACT_APP_SENTRY_DSN=your_sentry_dsn
# REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id

# Security Settings
# REACT_APP_ENABLE_EMULATOR=true  # Only for development
# REACT_APP_FORCE_HTTPS=true     # Force HTTPS in production